{
  "$schema": "http://json-schema.org/schema#",
  "$id": "urn:x-adshares:info:0.1",
  "type": "object",
  "title": "Service Information Schema",
  "readOnly": true,
  "required": [
    "service"
  ],
  "properties": {
    "service": {
      "type": "object",
      "properties": {
        "host": {
          "type": "string",
          "format": "uri"
        },
        "role": {
          "type": "string",
          "enum": [
            "adclassify",
            "adpanel",
            "adpay",
            "adselect",
            "adserver",
            "aduser",
            "node",
            "operator"
          ]
        }
      }
    },
    "endpoints": {
      "type": "array",
      "items": {
        "$ref": "urn:x-adshares#endpoint"
      }
    }
  }
}
