{%  if item.type == 'html' %}

    <iframe src="{{ value }}" class="preview-html" data-toggle="lightbox"></iframe>

    <a href="#" class="easyadmin-thumbnail" data-featherlight="#easyadmin-lightbox-{{ item.uuid }}" data-featherlight-close-on-click="anywhere">
        Original preview
    </a>

    <div id="easyadmin-lightbox-{{ item.uuid }}" class="easyadmin-lightbox">
        <iframe src="{{ value }}" class="preview-html" data-toggle="lightbox" width="{{ item.width }}" height="{{ item.height }}"></iframe>
    </div>

{% else %}
    <a href="#" class="easyadmin-thumbnail" data-featherlight="#easyadmin-lightbox-{{ item.uuid }}" data-featherlight-close-on-click="anywhere">
        <img src="{{ value }}" />
    </a>

    <div id="easyadmin-lightbox-{{ item.uuid }}" class="easyadmin-lightbox">
        <iframe src="{{ value }}" class="preview-html" data-toggle="lightbox" width="{{ item.width }}" height="{{ item.height }}"></iframe>
    </div>

{%  endif %}

